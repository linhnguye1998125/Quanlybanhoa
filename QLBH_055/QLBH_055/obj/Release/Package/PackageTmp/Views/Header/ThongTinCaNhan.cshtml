@model QLBH_055.Models.KHACHHANG
@{
    /**/

    ViewBag.Title = "Thông tin cá nhân";
    string Logo = Html.Action("GetQC", "Header", new { ThuTuQC = 1 }).ToString();
    Layout = "";
}
}
<link href="~/Content/CssClient/CssThongTinCaNhan.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="~/Scripts/jquery-3.3.1.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.11.0.min.js"></script>



<body class="container-fluid">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MAKH)
            <div class="col-md-4 col-md-offset-4">
                <div class="text-center">
                    <a href="~/Trang-Chu" class="logo-top">
                        <img src="@Url.Content(Logo)" alt="logo">
                    </a>
                </div>
                <div class="box">
                    <div class="form-group">
                        <div class="text-center">
                            <h2>Thông tin cá nhân</h2>
                        </div>
                    </div>
                    <div class="input-group ">

                    </div>


                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Họ tên</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(model => model.HOTEN, new { @class = "input-share", @Placeholder = "Họ & tên" })
                            @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Điện thoại</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(model => model.DIENTHOAI, new { @class = "input-share", @Placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(model => model.EMAIL, new { @class = "input-share", @Placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger validate-common" })
                        </div>
                    </div>
                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                        <div class="input-row">
                            @Html.TextBoxFor(model => model.MATKHAU, new { @class = "input-share", @Placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger validate-common" })

                        </div>

                    </div>
                    <div class="divider-form"></div>
                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                        <div class="input-row">
                            @Html.TextAreaFor(model => model.DIACHI, new { @class = "input-share-area", @Placeholder = "Địa chỉ" })
                            @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giới tính</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @if (ViewBag.GIOITINH == "Nam")
                            {
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nam", new { @checked = true })<lable style="font-size:15px;">Nam </lable>
                                <spans> </spans>
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nữ")<lable style="font-size:15px;"> Nữ</lable>
                            }
                            else if (ViewBag.GIOITINH == null)
                            {
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nam")<lable style="font-size:15px;">Nam </lable>
                                <spans> </spans>
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nữ")<lable style="font-size:15px;"> Nữ</lable>
                            }
                            else
                            {
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nam") <lable style="font-size:15px;">Nam </lable>
                                <spans> </spans>
                                @Html.RadioButtonFor(model => model.GIOITINH, "Nữ", new { @checked = true })<lable style="font-size:15px;"> Nữ</lable>
                            }
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngày sinh</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(model => model.NGAYSINH, "{0:d/MM/yyyy}", new { @class = "input-share", @Placeholder = "Ngày sinh" })
                            @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="divider-form"></div>
              
                    <input type="submit" name="dangnhap" class="btn-block btn btn-lg btn-primary" value="Lưu">

                </div>
            </div>
        }
    </div>

</body>