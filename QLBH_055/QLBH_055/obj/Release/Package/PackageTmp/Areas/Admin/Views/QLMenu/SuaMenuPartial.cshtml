@using QLBH_055.Models
@model MENU





<div class="col-md-12 text-center">
    <div class="card card-plain">
        <div class="header">
            <h2>Sửa Menu</h2>

        </div>
        <div class="content table-responsive table-full-width">
            @using (Html.BeginForm("SuaMenu", "QLMenu", FormMethod.Post))
            {
               
                        <div class="layout">
                            @Html.TextBoxFor(n => n.MAMN, new { @class = "textboxchung", @placeholder = "Mã khách hàng", disabled = "disabled" })
                        </div>
                        <div class="layout">
                            @Html.TextBoxFor(n => n.TENMN, new { @class = "textboxchung", @placeholder = "Tên menu" })
                        </div>
                        <div class="layout">
                            @Html.TextBoxFor(n => n.HREF, new { @class = "textboxchung", @placeholder = "Đường dẫn" })
                        </div>
                        <div class="layout">
                            <input id="btnCapNhat" type="submit" class="btn btn-primary" value="Cập nhật" />
                        </div>
                 
            }
        </div>
    </div>
</div>
