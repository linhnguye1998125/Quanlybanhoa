
@using QLBH_055.Models
@model ADMIN

<div class="col-md-12 text-center">
    <div class="card card-plain">
        <div class="header">
            <h4 class="title">Sửa Admin</h4>

        </div>
        <div class="content table-responsive table-full-width">
            @using (Html.BeginForm("SuaAdmin", "QLAdmin", FormMethod.Post))
            {

                <div class="layout">
                    @Html.TextBoxFor(n => n.MAAD, new { @class = "textboxchung", @placeholder = "Mã Admin", disabled = "disabled" })
                </div>
                <div class="layout">
                    @Html.TextBoxFor(n => n.TENAD, new { @class = "textboxchung", @placeholder = "Tên Admin" })
                </div>
                <div class="layout">
                    @Html.TextBoxFor(n => n.NGAYSINH, new { @class = "textboxchung", @placeholder = "Ngày sinh" })
                </div>
                <div class="layout-custom">
                    <b>Giới tính:</b>
                    @Html.RadioButtonFor(n => n.GIOITINH, "Nam") Nam
                    &nbsp;&nbsp;@Html.RadioButtonFor(n => n.GIOITINH, "Nữ") Nữ
                </div>
                <div class="layout">
                    @Html.TextAreaFor(n => n.DIACHI, new { @class = "textboxchung-custom", @placeholder = "Địa chỉ" })
                </div>
                <div class="layout">
                    @Html.TextBoxFor(n => n.EMAIL, new { @class = "textboxchung", @placeholder = "Email" })
                </div>
                <div class="layout">
                    @Html.TextBoxFor(n => n.MATKHAU, new { @class = "textboxchung", @placeholder = "Mật khẩu" })
                </div>
                <div class="layout">
                    <input id="btnCapNhat" type="submit" class="btn btn-primary" value="Cập nhật" />

                </div>
            }
        </div>
    </div>
</div>

