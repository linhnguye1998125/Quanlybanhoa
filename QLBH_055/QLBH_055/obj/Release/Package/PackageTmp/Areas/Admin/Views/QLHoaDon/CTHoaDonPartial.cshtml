
@using QLBH_055.Models;
@model List<CTHOADON>

<div class="col-md-12">
    <div class="card card-plain">
        <div class="header">
            <h4 class="title">Chi tiết hóa đơn</h4>
            <p><span>Mã hóa đơn:</span> @ViewBag.MAHD</p>
            <p><span>Họ và tên:</span>  @ViewBag.TENKH</p>
        </div>
        <div class="content table-responsive table-full-width">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MASP</td>
                            <td>@item.TENSP</td>
                            <td>@item.SOLUONG</td>
                            <td>@item.DONGIA</td>
                            <td>@item.THANHTIEN</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>