@using QLBH_055.Models
@model DANHMUC



<div class="col-md-12 text-center">
    <div class="card card-plain">
        <div class="header">
            <h2>Thêm danh mục</h2>

        </div>
        <div class="content table-responsive table-full-width">
            @using (Html.BeginForm("ThemDanhMuc", "QLDanhMuc", FormMethod.Post))
            {
                <div class="layout">
                    @Html.TextBoxFor(n => n.TENDM, new { @class = "textboxchung", @placeholder = "Tên danh mục" })
                </div>
                <div class="layout">
                    @Html.DropDownList("MAMN", (IEnumerable<SelectListItem>)ViewBag.Menu, new { @class = "form-control" })
                </div>

                <div class="layout">
                    <input style="font-size:18px;" id="btnthem" type="submit" class="btn btn-info" value="Thêm" />
                </div>
            }
        </div>
    </div>
</div>
