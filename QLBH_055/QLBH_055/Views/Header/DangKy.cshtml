<body class="container-fluid">
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <div class="row">
        @using (Html.BeginForm("DangKy", "Header", FormMethod.Post))
        {
            <div class="col-md-4 col-md-offset-4">
                <div class="text-center">
                    <a href="~/Trang-Chu" class="logo-top">
                        <img src="@Url.Content(Logo)" alt="logo">
                    </a>
                </div>
                <div class="box">
                    <div class="form-group">
                        <div class="text-center">
                            <h2>Đăng ký tài khoản</h2>
                        </div>
                    </div>
                    <div class="input-group ">

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-facebook">
                            <i class="fa fa-fw fa-2x fa-facebook fa-fw"></i>
                        </span>
                        <a class="btn btn-lg btn-block btn-facebook" href="~/Dang-Nhap-Facebook"> Register with Facebook</a>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-google">
                            <i class="fa fa-fw fa-2x fa-google fa-fw"></i>
                        </span>
                        <a class="btn btn-lg btn-block btn-google" href="#"> Register with Google</a>
                    </div>

                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Họ tên</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(n => n.HOTEN, new { @class = "input-share", @Placeholder = "Họ & tên" })
                            @Html.ValidationMessageFor(n => n.HOTEN, "", new { @class = "text-danger validate-common" })
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Điện thoại</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(n => n.DIENTHOAI, new { @class = "input-share", @Placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(n => n.DIENTHOAI, "", new { @class = "text-danger validate-common" })
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(n => n.EMAIL, new { @class = "input-share", @Placeholder = "Email" })
                            @Html.ValidationMessageFor(n => n.EMAIL, "", new { @class = "text-danger validate-common" })
                        </div>
                    </div>
                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                        <div class="input-row">
                            @Html.PasswordFor(n => n.MATKHAU, new { @class = "input-share", @Placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(n => n.MATKHAU, "", new { @class = "text-danger validate-common" })

                        </div>

                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giới tính</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            <span style="font-size:15px;padding-left:22px;">Giới tính</span>
                            &nbsp; &nbsp; &nbsp;
                            @Html.RadioButtonFor(n => n.GIOITINH, 1, htmlAttributes: new { @checked = true }) Nam
                            &nbsp;
                            @Html.RadioButtonFor(n => n.GIOITINH, 0) Nữ
                        </div>
                    </div>
                    <div class="divider-form"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngày sinh</label>

                        @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                        <div class="input-row">
                            @Html.TextBoxFor(n => n.NGAYSINH, new { @class = "input-share", @Placeholder = "Ngày sinh" })
                            @Html.ValidationMessageFor(n => n.NGAYSINH, "", new { @class = "text-danger validate-common" })
                        </div>
                    </div>
                    <div class="divider-form"></div>

                    <input type="submit" name="dangnhap" class="btn-block btn btn-lg btn-primary" value="Đăng ký">
                    <p class="text-center">Bạn đã có tài khoản? <a href="~/Dang-Nhap">Đăng nhập tại đây</a></p>
                </div>
            </div>
        }
    </div>
</body>