@using QLBH_055.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TINTUC>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@Styles.Render("~/TinTuc/css")
<link href="~/Content/CssClient/CssTinTuc.css" rel="stylesheet" />
<div class="container">
    <div class="container">
        <div class="col-lg-12 title">
            <p class="title-wrap"><a href="~/Trang-Chu"><i class="fa fa-home"></i>Trang chủ</a> > <span>@ViewBag.Title</span></p>
        </div>
    </div>
    <hr />
    <div class="col-lg-12 text-center">

        @*<div class="title-left">Danh mục</div>
            <div class="left">
                <ul class="danhmuc">
                    @foreach (var danhmuc in ViewBag.DanhMuc)
                    {
                        <li class="danhmuc-item">
                            <a href="~/San-Pham?MADM=@danhmuc.MADM" class="danhmuc-item-a">
                                @danhmuc.TENDM
                            </a>
                        </li>
                    }
                </ul>
            </div>*@
        <div class="col-lg-2"></div>
        <div style="margin-top:28px" class="col-lg-8 col-md-8 col-sm-8">
            @foreach (var item in Model)
            {
                <div class="news-frame">
                    <div class="single-blog-item">
                        <a href="~/Chi-Tiet-Tin-Tuc?MATT=@item.MATT">
                            <img class="img-responsive img-thumbnail custom-img-news" style="height:300px;width:400px" src="@Url.Content("~/Image/" + item.ANH + " ")" alt="ảnh tin tức" />
                        </a>
                        <div class="sb-text">
                            <div class="content-news">
                                <h4> <a href="~/Chi-Tiet-Tin-Tuc?MATT=@item.MATT" class="title-news">@item.TIEUDE</a></h4>
                                <p class="datetime-news"><i class="fa fa-clock-o"></i> @item.NGAYDANG.Value.ToString("dd/MM/yyyy")</p>
                                <p class="content-describe">@item.MOTA</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @Html.PagedListPager(Model, page => Url.Action("TinTuc", new { page = page }))
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
