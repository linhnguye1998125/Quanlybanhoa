                    </ul>

                </div>
                <div class="col-lg-6">
                    <div class="well">
                        @using (Html.BeginForm("LienHe", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <form action="/action_page.php">
                                <div class="form-group">
                                    <label for="" class="control-label">Tên</label>
                                    @Html.TextBox("ten", null, new { @class = "form-control", @placeholder = "Tên" })
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="control-label">Email(*)</label>
                                    @Html.TextBox("email", null, new { @class = "form-control", @type = "email", @placeholder = "example@gmail.com" })
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Nội dung</label>
                                    @Html.TextBox("noidung", null, new { @id = "editor", @class = "form-control", @placeholder = "Nội dung" })

                                    <span class="help-block"></span>
                                </div>


                                <div class="text-center ">
                                    <button type="submit" class="btn btn-success">Send</button>
                                </div>

                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
