@using QLBH_055.Models;
@model SANPHAM
@{
    /**/

    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<link href="~/Content/CssClient/CssChiTietSP.css" rel="stylesheet" />

<style type="text/css">
    span.powrMark__text {
        display: none;
    }
    #appView .powrMark__logo-block {
        width: 65px;
        display: none;
        margin: 0 auto;
        margin-bottom: 15px;
    }
</style>
@*<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>*@
<div class="container">
    <div class="col-lg-12 title">
        <p class="title-wrap"><a href="~/Trang-Chu"><i class="fa fa-home"></i>Trang chủ</a> > <span>@ViewBag.Title</span></p>
        <hr />
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content flex-container">
                        <div class="tab-pane active " id="pic-1"><img src="@Url.Content("~/Image/"+Model.ANHSP)" class="img-responsive " @*style="width:510px; height:320px"*@ alt="Ảnh sản phẩm" /></div>
                        <div class="tab-pane" id="pic-2"><img src="~/Image/tangme4.jpg" alt="bị lỗi" /></div>
                        <div class="tab-pane" id="pic-3"><img src="~/Image/tangme8.jpg" alt="bị lỗi" /></div>
                        <div class="tab-pane" id="pic-4"><img src="~/Image/tangme7.jpg" alt="bị lỗi" /></div>
                        <div class="tab-pane" id="pic-5"><img src="~/Image/tangme9.jpg" alt="bị lỗi" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Url.Content("~/Image/"+Model.ANHSP)" alt="Ảnh bị lỗi "/></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img src="~/Image/tangme4.jpg" alt="bị lỗi" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img src="~/Image/tangme8.jpg" alt="bị lỗi" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img src="~/Image/tangme7.jpg" alt="bị lỗi" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img src="~/Image/tangme9.jpg" alt="bị lỗi" /></a></li>
                    </ul>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.TENSP</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                        </div>
                        <span class="review-no">Lượt xem: @Model.LUOTXEM</span>
                    </div>
                    <p class="product-description">@Html.Raw(Model.MOTA)</p>
                    <h4 class="price">Giá hiện tại:<span class="giasp">@Html.Action("FormatPrice", "Home", new { _strInput = Model.GIASP }) đ/bó</span></h4>
                    <p class="vote"><strong></strong> Trạng thái: <strong>@Html.Action("TrangThai", "Home", new { sl = @Model.SOLUONG })</strong></p>
                    @*<h5 class="sizes">
                            sizes:
                            <span class="size" data-toggle="tooltip" title="small">s</span>
                            <span class="size" data-toggle="tooltip" title="medium">m</span>
                            <span class="size" data-toggle="tooltip" title="large">l</span>
                            <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                        </h5>*@
                    @using (Html.BeginForm("AddItem", "Home", FormMethod.Post))
                    {
                        <h5 class="colors">
                            Số lượng:

                            <input id="soluong" name="soluong" style="width: 52px;padding-right: 5px;padding-left: 5px;" class="form-control" type="number" value="1" min="1" max="50" />
                        </h5>
                        <div class="action">
                            <input type="submit" class="add-to-cart btn btn-default" value="Cho vào giỏ hàng" id="submitgh" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="powr-comments" id="85be120e_1593311495"></div>
    <script src="https://www.powr.io/powr.js?platform=html"></script>
</div>
